{
  "name": "@liyincode/fhevm-sdk",
  "version": "0.1.2",
  "description": "Framework-agnostic SDK for working with Zama FHEVM across web and node runtimes.",
  "author": "liyincode",
  "license": "BSD-3-Clause-Clear",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https:://github.com/liyincode/fhevm-react-template.git",
    "directory": "packages/fhevm-sdk"
  },
  "homepage": "https://github.com/liyincode/fhevm-react-template#readme",
  "bugs": {
    "url": "https://github.com/liyincode/fhevm-react-template/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "fhevm",
    "fhe",
    "zama",
    "encryption",
    "privacy",
    "zk",
    "web3",
    "sdk",
    "react",
    "vue",
    "node",
    "typescript"
  ],
  "contributors": [
    {
      "name": "Original FHEVM Team",
      "url": "https://github.com/zama-ai/fhevm"
    }
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./storage": {
      "types": "./dist/shared/storage/index.d.ts",
      "default": "./dist/shared/storage/index.js"
    },
    "./types": {
      "types": "./dist/shared/types/fhevmTypes.d.ts",
      "default": "./dist/shared/types/fhevmTypes.js"
    },
    "./react": {
      "types": "./dist/platform/react/index.d.ts",
      "default": "./dist/platform/react/index.js"
    },
    "./vue": {
      "types": "./dist/platform/vue/index.d.ts",
      "default": "./dist/platform/vue/index.js"
    },
    "./node": {
      "types": "./dist/platform/node/index.d.ts",
      "default": "./dist/platform/node/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm test"
  },
  "dependencies": {
    "idb": "^8.0.3"
  },
  "peerDependencies": {
    "@fhevm/mock-utils": "^0.1.0",
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "ethers": "^6.13.4",
    "react": "^18.0.0 || ^19.0.0",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@testing-library/react": "^15.0.0",
    "@types/node": "~18.19.50",
    "@types/react": "~19.0.7",
    "@vitest/coverage-v8": "2.1.9",
    "@zama-fhe/relayer-sdk": "0.2.0",
    "dotenv": "^17.2.3",
    "ethers": "^6.13.7",
    "fake-indexeddb": "~6.0.0",
    "jsdom": "^27.0.0",
    "react": "~19.0.0",
    "typescript": "~5.8.2",
    "vitest": "~2.1.8",
    "vue": "^3.5.12"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "@fhevm/mock-utils": {
      "optional": true
    }
  }
}
